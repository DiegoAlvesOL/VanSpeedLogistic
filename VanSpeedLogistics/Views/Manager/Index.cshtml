@using VanSpeedLogistics.Models.ViewModels
@model ManagerDashboardViewModel

@{
    ViewData["Title"] = "Dashboard do Gestor";
}

<!-- Usa o Tailwind CSS para um design moderno e responsivo -->
<script src="https://cdn.tailwindcss.com"></script>

<style>
    .bg-primary {
        background-color: #2563eb; /* Azul escuro */
    }
    .text-primary {
        color: #2563eb;
    }
    .hover\:bg-primary-dark:hover {
        background-color: #1e40af;
    }
</style>

<div class="p-6 bg-gray-50 min-h-screen pb-20">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Fleet Management Dashboard</h1>

    
    <!-- Seção de KPIs - Previous Day's Performance (Sem alteração de idioma) -->
    <h2 class="text-xl font-semibold mb-4 text-gray-700">KPIs - Previous Day's Performance</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">

        <!-- Card 1: Deliveries Completed -->
        <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-green-500">
            <p class="text-sm font-medium text-gray-500">Deliveries Completed</p>
            <p class="text-4xl font-extrabold text-green-600 mt-1">@Model.PreviousDayDeliveries</p>
            <p class="text-xs text-gray-400 mt-2">Total completed deliveries.</p>
        </div>

        <!-- Card 2: Collections Made -->
        <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-blue-500">
            <p class="text-sm font-medium text-gray-500">Collections Made</p>
            <p class="text-4xl font-extrabold text-blue-600 mt-1">@Model.PreviousDayCollections</p>
            <p class="text-xs text-gray-400 mt-2">Total goods collected.</p>
        </div>

        <!-- Card 3: Returned Goods -->
        <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-red-500">
            <p class="text-sm font-medium text-gray-500">Returned Goods</p>
            <p class="text-4xl font-extrabold text-red-600 mt-1">@Model.PreviousDayReturns</p>
            <p class="text-xs text-gray-400 mt-2">Deliveries that failed and were returned.</p>
        </div>
    </div>
    
    <!-- ======================================================= -->
    <!-- NOVO BLOCO: SEÇÃO DE FILTROS SIMPLIFICADA (Apenas Driver) -->
    <!-- Layout ajustado: filtro compacto, botões alinhados à direita. -->
    <!-- ======================================================= -->
    <h2 class="text-xl font-semibold mb-4 text-gray-700">Activity Log Filters</h2>
    <div class="bg-white p-6 rounded-xl shadow-lg mb-10">
        <!-- Flex container principal para alinhar itens e botões -->
        <form asp-controller="Manager" asp-action="Index" method="get" class="flex flex-col md:flex-row gap-4 items-end w-full">
            
            <!-- Filtro de Motorista (Driver) - Largura controlada (max-w-sm) -->
            <div class="w-full md:max-w-sm">
                <label for="driverSelect" class="block text-sm font-medium text-gray-700 mb-1">Filter by Driver</label>
                <!-- O ViewData["DriversList"] será preenchido pelo Controller no Card 12 -->
                <select id="driverSelect" name="SelectedDriverId" class="w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">-- All Drivers --</option>
                    
                    @* O código Razor para listar os motoristas entrará aqui *@
                    @if (ViewData["DriversList"] is SelectList drivers)
                    {
                        @foreach (var item in drivers)
                        {
                            <option value="@item.Value" selected="@(item.Selected ? "selected" : null)">@item.Text</option>
                        }
                    }
                </select>
            </div>
            
            <!-- Container para os botões: usa ml-auto para empurrar para a direita no desktop -->
            <div class="flex gap-4 w-full md:w-auto md:ml-auto">
                <!-- Botão de Busca/Filtro -->
                <button type="submit" class="w-1/2 md:w-auto py-2 px-4 h-10 rounded-xl shadow-md transition duration-300 font-semibold flex-shrink-0 flex items-center justify-center bg-gray-600 text-white hover:bg-gray-700">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    <span class="ml-2 hidden sm:inline">Apply Filters</span>
                </button>
                
                <!-- Botão de Reset -->
                <a asp-action="Index" class="w-1/2 md:w-auto py-2 px-4 h-10 rounded-xl shadow-md transition duration-300 font-semibold flex-shrink-0 flex items-center justify-center bg-red-500 text-white hover:bg-red-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 0h-4.582"></path></svg>
                    <span class="ml-2 hidden sm:inline">Reset</span>
                </a>
            </div>
        </form>
    </div>
    
    <!-- ======================================================= -->
    <!-- FIM DO NOVO BLOCO DE FILTROS -->
    <!-- ======================================================= -->
    
    
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-700">Recent Activity Log</h2>
        
        <a asp-action="ExportToExcel" class="bg-primary text-white font-semibold py-2 px-4 rounded-xl shadow-md hover:bg-primary-dark transition duration-300 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l3-3m-3 3l-3-3m-8 3h18a2 2 0 002-2V7a2 2 0 00-2-2H4a2 2 0 00-2 2v7a2 2 0 002 2z"></path></svg>
            Export Report (.xlsx)
        </a>
    </div>
    
    <div class="bg-white p-6 rounded-xl shadow-lg overflow-x-auto">
        @if (Model.RecentActivityLog.Any())
        {
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Driver
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Date/Time
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Deliveries
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Collections
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Returns
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Notes
                    </th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var record in Model.RecentActivityLog)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            <!-- Uses the FullName of the ApplicationUser (included in the query) -->
                            @(record.User?.FullName ?? "N/A")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @record.Date.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-bold">
                            @record.Deliveries
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600 font-bold">
                            @record.Collections
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 font-bold">
                            @record.Returns
                        </td>
                        <td class="px-6 py-4 whitespace-normal text-sm text-gray-700 max-w-xs">
                            @(string.IsNullOrWhiteSpace(record.Notes) ? "-" : record.Notes)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p class="p-4 text-center text-gray-500">No activity records found at this time.</p>
        }
    </div>

</div>